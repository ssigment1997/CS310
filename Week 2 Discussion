#include <iostream>
#include <string>
#include <iomanip>

using namespace std;

int main()
{
    string name = "benjamin";
    double height = 6;
    int speed = 90;

    cout << fixed << showpoint << setprecision(2);

    cout << setw(10) << name << setw(7) << height
         << setw(8) << speed << endl;

    cout << setfill('*');
    cout << setw(10) << name << setw(7) << height
         << setw(8) << speed << endl;

    cout << setw(10) << name << setfill('-')
         << setw(7) << heigh
         << setw(8) << speed << endl;

    cout << setw(10) << setfill('%') << name
         << setw(7) << setfill('-) << height
         << setw(8) << setfill('^') << speed
         << endl;

    cout << setfill(' ');
    cout << setw(10) << name << setw(7) << height
         << setw(8) << speed << endl;

    return 0;
}
