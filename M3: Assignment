#include <stdio.h>

#define FIXED_PAYMENT 25000.0
#define OPTION2_RATE 0.125
#define OPTION3_RATE_LOW 0.10
#define OPTION3_RATE_HIGH 0.14
#define THRESHOLD_COPIES 4000

int main() {
    double price, copies;
    double option1, option2, option3;
    int bestOption;

    // Input
    printf("Enter the net price of each copy: ");
    scanf("%lf", &price);
    printf("Enter the estimated number of copies sold: ");
    scanf("%lf", &copies);

    // Calculate royalties for each option
    option1 = FIXED_PAYMENT;
    option2 = OPTION2_RATE * price * copies;
    
    if (copies <= THRESHOLD_COPIES) {
        option3 = OPTION3_RATE_LOW * price * copies;
    } else {
        option3 = (THRESHOLD_COPIES * OPTION3_RATE_LOW * price) + 
                  ((copies - THRESHOLD_COPIES) * OPTION3_RATE_HIGH * price);
    }

    // Determine the best option
    if (option1 >= option2 && option1 >= option3) {
        bestOption = 1;
    } else if (option2 >= option3) {
        bestOption = 2;
    } else {
        bestOption = 3;
    }

    // Output results
    printf("\nRoyalties under each option:\n");
    printf("Option 1: $%.2f\n", option1);
    printf("Option 2: $%.2f\n", option2);
    printf("Option 3: $%.2f\n\n", option3);

    // Switch statement to display the best option
    switch(bestOption) {
        case 1:
            printf("Best option: Option 1\n");
            break;
        case 2:
            printf("Best option: Option 2\n");
            break;
        case 3:
            printf("Best option: Option 3\n");
            break;
        default:
            printf("Error in determining the best option.\n");
    }

    return 0;
}
