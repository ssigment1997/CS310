#include <iostream>
using namespace std;

int main() {
    int number;

    cout << "Enter a number: ";
    cin >> number;

    // Error 1: Missing closing parenthesis in the if condition
    if (number > 0 { 
        cout << "The number is positive." << endl;
    } 
    else if (number < 0) {
        cout << "The number is negative." << endl;
    } 
    else {
        cout << "The number is zero." << endl;
    }

    // Error 2: Incorrect variable name used in the comparison
    if (num == 0) { 
        cout << "You entered zero again!" << endl;
    }

    return 0;
}
